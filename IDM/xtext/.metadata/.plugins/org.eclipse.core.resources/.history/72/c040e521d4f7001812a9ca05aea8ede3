grammar org.xtext.example.mydsl.Mymix with org.eclipse.xtext.common.Terminals

generate mymix "http://www.xtext.org/example/mydsl/Mymix"

Model:
	(Procedures+=Procedure)*;
	
Procedure:
	'procedure' name=ID
	(body+=Operation)+
	result=Result
;

Operation:
	Check
	| Wait
	| TakeStuff	
;

TakeStuff:
	op=Take ( 	
		body=PutSome	
		| body=PutAll
		)
;



Take:
	'take' quantity=Quantity 'from' cup=Cup ('filter' filter=Filter)?	
;

PutSome:
	(body+=Wait? body+=Put)+
;

PutAll:
	'to' cup=Cup
;

Put:
	'put' quantity=Quantity 'to' cup=Cup ('filter' filter=Filter
	)? 
;

Check:
	'check' cup=Cup ('forQuantity' quantity=Quantity)? 
;

Wait:
	'wait' time=Time
;

Result:
	'result' cup=Cup
;

Filter:
	filter='A' | filter='B'
;

Cup:
	'cup'? cup=INT
;

Quantity:
	quantity=INT 'mL'?
;

Time:
	time=INT 'sec'?
;