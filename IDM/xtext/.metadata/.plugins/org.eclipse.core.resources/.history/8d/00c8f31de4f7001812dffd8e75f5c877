    def compile(Device d)'''

    public class Device{
    	private final int washCup=4;
    	private final int dumpCup=5;
    	private final int resultCup=11;
    	
    	private final int maxVolume;
    	
    	private int position=dumpCup;
    	private int currentVolumeIn=0;
    	«FOR p:d.procedures»
    		«p.compile»
    	«ENDFOR»
		
		//Seems correct
		public int getRelativePos(Cup c){
			position=position + (c - position);
			return (c-position);
        }
        
        public void mixResult(int cup){
        	emptySeringe();
        	mixWash();
           	move(getRelativePos(cup));
            suck(maxVolume);
            move(getRelativePos(resultCup));//move to last cup
            blow(maxVolume);
            mixWash();
         }
         
         public void mixWash(){
         	emptySeringe();
         	move(getRelativePos(washCup));
         	suck(maxVolume);
         	move(getRelativePos(dumpCup));
         	blow(maxVolume);
         }
         
         public void mixWait(int time){
         	wait(time);
         }
         
         public void mixPutAll(int cup,int filter){
         	this.emptySeringe();
         	filt(filter);
        	move(this.getRelativePos(cup));
        	blow(this.currentVolumeIn);
        	this.currentVolumeIn=0;
        	mixWash();
         }
         
         public void mixPut(int cup, int quantity){
         	this.enoughVolumeInSeringe(quantity);
         	move(this.getRelativePos(cup));
         	blow(quantity);
         	
         	mixWash();
         }
         
         public void mixTake(int cup, int quantity){
         	this.emptySeringe();
         	}
         
         
        public void NotEmptySeringe(){
           	if(this.currentVolumeIn==0)
         		{ throw new NullPointerException();}
        } 	
		public void emptySeringe(){
        	if(this.currentVolumeIn>0)
        		{ throw new NullPointerException();}
		}	
         
         public void enoughVolumeInSeringe(int quantity){
         	if(this.currentVolumeIn<quantity)
         		{ throw new NullPointerException();}
         }
		
    '''

